<!DOCTYPE html>
<body style="font-family: courier new">
<html>
  <head>
    <title>Register</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel='stylesheet' type='text/css' href='new.css'>    
  </head>


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<h1>Register</h1>


<!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            The best organize <br />
            <span class="text-primary">for your events</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
           Let's us to help you organize the event and share with other people
          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
              <form action='/users' method='post'>
               <input type='hidden' name='authenticity_token', value='<%= form_authenticity_token %>'>

                <!-- Username Input -->
                  <div class="form-outline mb-4">
                    <input type='organizer_name' id='organizer_name' name='user[organizer_name]' value='<%= @user.organizer_name %>' class="form-control" />
                    <label class="form-label" for="organizer_name">Organizer Name</label>
                  </div>

                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type='email' id='email' name='user[email]' value='<%= @user.email %>' class="form-control"/>
                  <label class="form-label" for="email">Email</label>
                  
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input type='password' id='password' name='user[password]' class="form-control" />
                  <label class="form-label" for="password">Password</label>
                </div>

                <!-- Checkbox -->
                <!-- <div class="form-check d-flex justify-content-center mb-4">
                  <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
                  <label class="form-check-label" for="form2Example33">
                    Subscribe to our newsletter
                  </label>
                </div> -->

                <!-- Submit button -->
                <button submit_tag 'register' type="submit" class="btn btn-primary btn-block mb-4">
                  Sign up
                </button>

                <!-- Register buttons -->
                <div class="text-center">
                  <p>or sign up with:</p>
                  <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-facebook-f"></i>
                  </button>

                  <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-google"></i>
                  </button>

                  <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-twitter"></i>
                  </button>

                  <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-github"></i>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>

<!-- Section: Design Block -->



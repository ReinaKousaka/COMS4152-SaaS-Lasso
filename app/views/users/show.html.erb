<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <title>User Info</title>
  <style>caption {caption-side: top; text-align: center;}</style>
</head>


<body style="font-family: courier new">
  <div class="navbar navbar-dark bg-dark shadow-sm">
    <h2 style="color: white"> <em> <%= @user.organizer_name %> Home Page </em> </h2>
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <%= link_to 'Events Hub', events_path, :class => 'btn btn-secondary mr-sm-2' %>
      </li>
    </ul>
  </div>

  <div>
    <% flash.each do |type, msg| %>
      <div class="alert alert-info">
        <%= msg %>
      </div>
    <% end %>
  </div>


  <div class="container mt-2">
    <div class="row">

      <div class="col-3"> 
        <div class="card">
          <div class="card-header">
            <h4 style="text-align:center">Contact Email</h4>
          </div>
          <div class="card-body">
            <em> <%= @user.email %></em>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h4 style="text-align:center">About Us</h4>
          </div>
          <div class="card-body">
          <em> <%= @user.description %> </em>
        </div>
          <div class="card-body">
            <%= button_to 'Edit Profile', 
            edit_user_path(@user),
            :method => :get, 
            :style => @show_edit_profile
            %>
          </div>
        </div>


    <div class="card">
      <div class="card-body">
        <%# <img src="../assets/Columbia-University-logo.gif" class="img-fluid img-thumbnail" alt="..."> %>
        <%= image_tag(
          'Columbia-University-logo.gif',
          :class => "img-fluid img-thumbnail",
          :alt => '...'
        )%>
      </div>

    </div>
  </div>

  <div class="col-9"> 
    <div class="row-6">
      <div class="card">
        <div class="card-header">
              <h4 style="text-align:center">Our Upcoming Events</h4>
        </div>

        <div class="card-body">
          <table class="table table-striped" style="border:2px solid gray;margin-left:auto;margin-right:auto;" id="upcoming_events">
            <tr>
              <th>Event</th>
              <th>Category</th>
              <th>Location</th>
              <th>Start Time</th>
              <th>End Time</th>
            </tr>
            <tbody>
              <% @future_events.each do |event| %>
                <tr>
                  <td>
                    <%= link_to "#{event.title}", event_path(event) %>
                  </td>
                  <td>
                    <%= event.category %>
                  </td>
                  <td>
                    <%= event.location%>
                  </td>
                  <td>
                    <%= event.start_time %>
                  </td>
                  <td>
                    <%= event.end_time %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class='row-5'>
      <div class="card">
        <div class="card-header">
          <h4 style="text-align:center">Our Past Events</h4>
        </div>
        <div class="card-body">
          <table class="table table-striped" style="border:2px solid gray;margin-left:auto;margin-right:auto;" id="past_events">
            <thead>
              <tr>
                <th>Event</th>
                <th>Category</th>
                <th>Location</th>
                <th>Start Time</th>
                <th>End Time</th>
              </tr>
            </thead>
            <tbody>
              <% @past_events.each do |event| %>
                <tr>
                  <td>
                    <%= link_to "#{event.title}", event_path(event) %>
                  </td>
                  <td>
                    <%= event.category %>
                  </td>
                  <td>
                    <%= event.location%>
                  </td>
                  <td>
                    <%= event.start_time %>
                  </td>
                  <td>
                    <%= event.end_time %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</body>
</html>

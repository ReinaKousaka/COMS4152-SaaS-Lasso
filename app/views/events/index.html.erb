      table,
      td,
      th {
        padding: 10px;
        border: 2px solid #1c87c9;
        border-radius: 5px;
        background-color: #43EFAB;
        text-align: center;
      }
      
</style>

<style>
.button {
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  font-family: courier new; 
}
.text-center {
  text-align: center;
}

.button1 {background-color: #4CAF50;} /* Green */
.button2 {background-color: #008CBA;} /* Blue */
</style>

<style>
.container {
  height: 100px;
  position: relative;
}

.center {
  margin: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
</style>

<h2>Lasso! - Stay in the Loop.</h2>


<h2 style="text-align:center">Events Hub</h2>

<%= form_tag events_path, method: :get, id: 'categories_form' do %>
  <div class="form-check  form-check-inline">
  Include:
  <% @all_categories.each do |category| %>

      <%= label_tag "categories[#{category}]", category, class: 'form-check-label' %>
      <%= check_box_tag "category[#{category}]", "1",  @categories_to_show.include?(category), class: 'form-check-input' %>
  <% end %>
  <%= submit_tag 'Refresh', id: 'categories_submit', class: 'btn btn-primary' %>
  </div>
<% end %>


<table class="table table-striped col-md-12" style="border:2px solid red;margin-left:auto;margin-right:auto;" id="events">
  <thead>
    <tr>
      <th>Event</th>
      <th>Category</th>
      <th>Organizer</th>
      <th>Location</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
         <%= link_to "#{event.title}", event_path(event) %>
        </td>
        <td>
          <%= event.category %>
        </td>
        <td>
          <%= event.organizer %>
        </td>
        <td>
        <%= event.location%>
        </td>
        <td>
        <%= event.start_time %>
        </td>
        <td>
        <%= event.end_time %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class = "container">
<div class="center">
    <text> Have an event you want loop Columbia in about?</text> 
    <button class="button button1" ><%= link_to 'Add new event!', new_event_path, :class => 'btn btn-primary' %></button>
</div>
</div>

